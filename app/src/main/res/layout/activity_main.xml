<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liu.zhibao.angrypandaservice.MainActivity">

    <Button
        android:id="@+id/intentservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="intentservice"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/service"
            android:text="service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/sendmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sendmessage"/>
    </LinearLayout>


    <Button
        android:id="@+id/remoteservice"
        android:text="remoteservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/death"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="death"/>
    <Button
        android:id="@+id/crash"
        android:text="makecrash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/transact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transact"/>
    <Button
        android:id="@+id/muldouble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="double"/>


</LinearLayout>
